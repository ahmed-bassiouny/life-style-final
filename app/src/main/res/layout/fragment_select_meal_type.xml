<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:weightSum="4"
    tools:context=".fragments.SelectMealTypeFragment">


    <FrameLayout
        android:id="@+id/cv_breakfast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/breakfast"
        android:tag="breakfast"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="20dp"
            android:text="@string/breakfast"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/cr_lunch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:tag="lunch"
        android:background="@drawable/lunch">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="20dp"
            android:text="@string/lunch"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/cr_dinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:tag="dinner"
        android:layout_weight="1"
        android:background="@drawable/dinner">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="20dp"
            android:text="@string/dinner"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/cv_snacks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/snacks"
        android:layout_weight="1"
        android:tag="snacks">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="20dp"
            android:text="@string/snacks"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </FrameLayout>
    <Button
        android:id="@+id/btn_create_meal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/fill_dark_blue"
        android:text="@string/create_meal"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_gravity="center"/>
</LinearLayout>